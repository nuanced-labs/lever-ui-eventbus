{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "jsx": "react-jsx",
    "declaration": true,
    "emitDeclarationOnly": true,
    "outDir": "./dist/types",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true
  },
  "include": [
    "src/integrations/react/**/*"
  ],
  "exclude": [
    "test/**/*",
    "demo/**/*",
    "dist/**/*"
  ]
}